{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/ptin0004/FIT3179-A2/main/data/fertility_rate_malaysia.csv" },
    "vconcat": [{
        "width": "container",
        "height": 240,
        "mark": "area",
        "encoding": {
            "x": {
                "field": "Date",
                "type": "temporal",
                "scale": { "domain": { "param": "brush" } },
                "axis": { "title": "", "tickCount": 10 }
            },
            "y": { "field": "Total_Fertility_Rate", 
                    "type": "quantitative",
                    "title": "Total Fertility Rate"}
        }
    }, {
        "width": "container",
        "height": 60,
        "mark": "area",
        "params": [{
            "name": "brush",
            "select": { "type": "interval", "encodings": ["x"] }
        }],
        "encoding": {
            "x": {
                "field": "Date",
                "type": "temporal",
                "axis": { "tickCount": 10 }
            },
            "y": {
                "field": "Total_Fertility_Rate",
                "type": "quantitative",
                "title": "Total Fertility Rate",
                "axis": { "tickCount": 3, "grid": false }
            }
        }
    }]
}